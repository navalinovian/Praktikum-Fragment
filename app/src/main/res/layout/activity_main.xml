<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_static_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contoh Static Fragment"
        android:onClick="handlerClickStaticFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/btn_dynamic_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contoh Dynamic Fragment"
        android:onClick="handlerClickDynamicFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_static_fragment"
        />

    <Button
        android:id="@+id/btn_praktikum_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contoh Praktikum Fragment"
        android:onClick="handlerClickPraktikumFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_dynamic_fragment"
        />




</androidx.constraintlayout.widget.ConstraintLayout>